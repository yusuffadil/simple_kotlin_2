<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppCompat." parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar." parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/shape_rectangle_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/shape_rectangle_white_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Button.Optional">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/shape_rectangle_red_line</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">

    </style>

    <style name="TextView.High" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextView.High.white" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Normal">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextView.Normal.white">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Normal.red">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/shape_rectangle_red_line_radius5</item>
    </style>

</resources>